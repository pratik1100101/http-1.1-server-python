{
  "routes": [
    {
      "method": "GET",
      "path": "/",
      "handler": "serve_static_file",
      "handler_args": ["index.html"]
    },
    {
      "method": "GET",
      "path": "/style.css",
      "handler": "serve_static_file",
      "handler_args": ["style.css"]
    },
    {
      "method": "GET",
      "path": "/script.js",
      "handler": "serve_static_file",
      "handler_args": ["script.js"]
    },
    {
      "method": "GET",
      "path": "/api/data",
      "handler": "get_data"
    },
    {
      "method": "POST",
      "path": "/api/data",
      "handler": "post_data"
    },
    {
      "method": "POST",
      "path": "/api/register",
      "handler": "register_user"
    },
    {
      "method": "POST",
      "path": "/api/login",
      "handler": "login_user"
    },
    {
      "method": "GET",
      "path": "/api/profile",
      "handler": "get_user_profile"
    },
    {
      "path": "/api/protected_data",
      "method": "GET",
      "handler": "get_data"
    }
  ]
}